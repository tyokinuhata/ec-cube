{% extends '@admin/default_frame.twig' %}

{% set menus = ['content', 'news'] %}

{% block title %}{{'admin.content.news_edit.64'|trans}}{% endblock %}
{% block sub_title %}{{'admin.content.news_edit.65'|trans}}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ asset('assets/css/bootstrap-datetimepicker.min.css', 'admin') }}">
{% endblock stylesheet %}

{% block javascript %}
<script src="{{ asset('assets/js/vendor/moment.min.js', 'admin') }}"></script>
<script src="{{ asset('assets/js/vendor/moment-ja.js', 'admin') }}"></script>
<script src="{{ asset('assets/js/vendor/bootstrap-datetimepicker.min.js', 'admin') }}"></script>
<script>
$(function() {
    var inputDate = document.createElement('input');
    inputDate.setAttribute('type', 'date');
    if (inputDate.type !== 'date') {
        $('#admin_news_publish_date').datetimepicker({
            locale: 'ja',
            format: 'YYYY-MM-DD',
            useCurrent: false,
            showTodayButton: true
        });
    }

});
</script>
{% endblock javascript %}

{% block main %}
    <div class="row" id="aside_wrap">
        <div id="detail_wrap" class="col-md-9">
            <div id="detail_box" class="card rounded border-0 mb-4">
                <div class="card-header">
                    <div class="row">
                        <div class="col-8">
                            <span class="card-title">{{ 'admin.content.news_edit.66' | trans }}</span>
                        </div>
                        <div class="col-4 text-right">
                            <a data-toggle="collapse" href="#ordererInfo" aria-expanded="false" aria-controls="ordererInfo">
                                <i class="fa fa-angle-up fa-lg"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div id="ordererInfo" class="collapse show">
                    <div class="card-body">
                        <form role="form" class="form-horizontal" name="form1" id="form1" method="post" action="?">
                            {{ form_row(form._token) }}

                            <div class="row mb-2">
                                <div class="col-3">
                                    <span>{{ form_label(form.publish_date) }}</span>
                                </div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col-6">
                                            {{ form_widget(form.publish_date, {'attr': {'class': 'input_cal'}}) }}
                                            {{ form_errors(form.publish_date) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-3">
                                    <span>{{ form_label(form.title) }}</span>
                                </div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col-6">
                                            {{ form_widget(form.title) }}
                                            {{ form_errors(form.title) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-3">
                                    <span>{{ form_label(form.url) }}</span>
                                </div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col-6">
                                            {{ form_widget(form.url) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-3"></div>
                                <div class="col mb-2">
                                    <div class="ml-4">
                                        {{ form_widget(form.link_method) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-3">
                                    <span>{{ form_label(form.description) }}</span>
                                </div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col-6">
                                            {{ form_widget(form.description) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div><!-- /.box -->

            <div id="detail_box__footer" class="row">
                <div id="detail_box__back_button" class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-center btn_area">
                    <p><a href="{{ url('admin_content_news') }}">{{'admin.content.news_edit.67'|trans}}</a></p>
                </div>
            </div>

        </div><!-- /.col -->

        <div class="col-md-3" id="aside_column">
            <div id="common_box" class="col_inner">
                <div id="common_box__body" class="box no-header">
                    <div id="common_button_box" class="box-body">
                        <div id="common_button_box__insert_button" class="row text-center">
                            <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                <button class="btn btn-primary btn-block btn-lg" onclick="document.form1.submit(); return false;">{{'admin.content.news_edit.68'|trans}}</button>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div><!-- /.col -->


    </div>

{% endblock %}
